@page
@model RazorCrud.Pages.Musics.IndexModel

@{
    ViewData["Title"] = "Music selection";
}
<style>
 .bodyMusic{
   background-image: linear-gradient(rgba(38,38,38,0.3), rgba(255,255,255,0)), url("Img/VituvianMusic.jpg");
   background-repeat: no-repeat;
   background-attachment: fixed;
   background-size: cover;   
 }
 .opDiv{
   opacity: 0.9;
   }
   
 </style>
<body class="bodyMusic">
<h1 class="text-light">Music selection</h1>

<p>
    <a asp-page="Create" class="text-secondary">Create New</a>
</p>
<table class="table table-hover table-dark opDiv">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].Band)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Music) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Band)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="text-light">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID" class="text-light">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" class="text-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>