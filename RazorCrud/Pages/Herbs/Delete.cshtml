@page
@model RazorCrud.Pages.Herbs.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<style>
 .bodyHerb{
   background-image: linear-gradient(rgba(154,153,153,1), rgba(255,255,255,0)), url("../Img/herbs-essential-oils.jpg");
   background-repeat: no-repeat;
   background-attachment: fixed;
   background-size: cover;   
 }
 .opDiv{
   background-color:rgba(38,38,38,0.6);
   }
 .opDel{
    background-color:rgba(38,38,38,0.3);
  }
 </style>
<body class="bodyHerb">
<h1 class="text-dark">Delete</h1>

<h3 class="text-light opDel">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-dark">Herb</h4>
    <hr />
    <dl class="row text-light opDiv">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Herb.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Herb.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Herb.Usage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Herb.Usage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Herb.Part)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Herb.Part)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Herb.Grams)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Herb.Grams)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Herb.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Herb.Price)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Herb.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="text-dark">Back to List</a>
    </form>
</div>
</body>