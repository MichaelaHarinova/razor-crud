@page
@model RazorCrud.Pages.Herbs.IndexModel

@{
    ViewData["Title"] = "The power of herbs";
    
}
<style>
 .bodyHerb{
   background-image: linear-gradient(rgba(154,153,153,0.3), rgba(255,255,255,0.3)), url("Img/herbs-essential-oils.jpg");
   background-repeat: no-repeat;
   background-attachment: fixed;
   background-size: cover;   
 }
 .opDiv{
     opacity: 0.8;
  }
 </style>
<body class="bodyHerb">
<h1 class="text-dark">Apothecary</h1>

<p>
    <a asp-page="Create" class="text-secondary">Create New</a>
</p>
<table class="table table-hover table-dark opDiv">
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Herb[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Herb[0].Usage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Herb[0].Part)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Herb[0].Grams)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Herb[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Herb) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Part)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grams)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td >
                <a asp-page="./Edit" asp-route-id="@item.ID" class="text-light">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID" class="text-light">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" class="text-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>